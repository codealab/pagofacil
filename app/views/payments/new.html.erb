
<%  estados_de_mexico = [
[''],
['Aguascalientes'],
['Baja California'],
['Baja California Sur'],
['Campeche'],
['Chihuahua'],
['Chiapas'],
['Coahuila'],
['Colima'],
['Distrito Federal'],
['Durango'],
['Guerrero'],
['Guanajuato'],
['Hidalgo'],
['Jalisco'],
['México'],
['Michoacán'],
['Morelos'],
['Nayarit'],
['Nuevo León'],
['Oaxaca'],
['Puebla'],
['Querétaro'],
['Quintana Roo'],
['Sinaloa'],
['San Luis Potosí'],
['Sonora'],
['Tabasco'],
['Tamaulipas'],
['Tlaxcala'],
['Veracruz'],
['Yucatán'],
['Zacatecas']
]%>



<div id="welcome">
  <div class="sixteen columns col-md-12">
    <div class="welcome">
      <p> ¡Ayuda a tu pequeño a
      <span class="color">
      sentirse cómodo
      </span> en su nuevo mundo! </p>
    </div>
  </div>
</div>

<div class="container content">
  <div class="row">
    <div class="col-md-9 col-md-offset-1 col-sm-8 col-sm-offset-1 reg-page">
      <%= form_for @payment, url: "/payments/create" do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="sixteen columns"></div>
          
          
          <h4 class="title">Donativo<span class="linea"></span></h4>
          <div class="reg-header"> </div>

          <div class="form-group campo">
            <%= f.label  :Monto, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
            <%=  f.number_field :monto, class: "form-control",placeholder:"$ Monto en MXN "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label  :Número_de_tarjeta, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.number_field :numero_tarjeta, class: "form-control", placeholder:" Número de tarjeta "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Cvt, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.number_field :cvt , class: "form-control", id: "inputEmail3", placeholder:" Ctv "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Mes_de_Expiración, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.select :mes_expiracion,["Escoge un mes","01","02","03","04","05","06","07","08","09","10","11","12"], class: "form-control", id: "inputEmail3", placeholder:" Mes de expiración "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Año_de_expireción, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.select :anyo_expiracion,["Escoge un año","14","15","16","17","18","19","20","21"], class: "form-control", id: "inputEmail3", placeholder:" Año de expiración "%>
            </div>
          </div>
          <h4>Datos personales <span class="linea"></span></h4>
          <div class="reg-header"> </div>
          <div class="form-group campo">
            <%= f.label :Nombre, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%= f.text_field :nombre, class: "form-control", id: "inputEmail3", placeholder:"Nombre" %>
            </div>
          </div>
          <div class="form-group campo">
            <%=  f.label :Apellidos, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :apellidos, class: "form-control", id: "inputEmail3", placeholder:" Apellidos "%>
            </div>
          </div>
          
          <div class="form-group campo">
            <%= f.label :Email, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :email, class: "form-control", id: "inputEmail3", placeholder:" Email "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Teléfono, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.number_field :telefono , class: "form-control", id: "inputEmail3", placeholder:" Teléfono "%>
            </div>
          </div>
          
          <div class="form-group campo">
            <%= f.label  :Celular, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.number_field :celular, class: "form-control", id: "inputEmail3", placeholder:"  Celular"%>
            </div>
          </div></br>
          <h4>Dirección <span class="linea"></span></h4>
          <div class="reg-header"> </div>
          <div class="form-group campo">
            <%= f.label  :Calle_y_número, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :calle_y_numero, class: "form-control", id: "inputEmail3", placeholder:" Calle y número "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Colonia, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :colonia, class: "form-control", id: "inputEmail3", placeholder:" Colonia "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label :Cp, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :cp, class: "form-control", id: "inputEmail3", placeholder:" Cp "%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label  "Municipio o Delegación", class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%=  f.text_field :municipio, class: "form-control", id: "inputEmail3", placeholder:" Municipio"%>
            </div>
          </div>
          <div class="form-group campo">
            <%= f.label  :Estado, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              
              <%= f.select(:estado, estados_de_mexico)%>
            </div>
          </div>
          <div class="form-group campo">
              <p style="margin-left: 115px;"><strong>País:</strong> Por ahora únicamente aceptamos tarjetas méxicanas"</p>
          </div>
          <dl class="dl-horizontal margin-left-button">
            
            <dd class="col-lg-3 text-right"> <%= f.submit "Donar", class: "btn btn-info btn-lg " %> </dd></br></br>
            
          </dl>
      <% end %>
    </div>
  </div>
</div>