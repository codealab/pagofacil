<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      La forma contiene <%= object.errors.count %>
      <%  if object.errors.count == 1 %>error<% else %>errores<%end%>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<% if @payment.response %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h4>Errores Pago Facil</h4>
      <ul>
        <% @payment.response["WebServices_Transacciones"]["transaccion"]["error"].each do |key|%>              
        <li><%= key[0] %>: <%= key[1] %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>